<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:padding="16dp">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        tools:ignore="UselessLeaf" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="#CC1919"
            android:hint="@string/title"
            android:textColor="@color/main_text"
            android:textColorHint="@color/main_text"
            android:textSize="@dimen/medium_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text"
        android:text="@string/choose_a_color"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"/>



    <HorizontalScrollView
        android:id="@+id/color_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="72dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/image_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_note_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_note_color1"/>

            <ImageView
                android:id="@+id/theme_red"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_red"
                android:padding="8dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/color1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_note_color2"/>

            <ImageView
                android:id="@+id/theme_pink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_pink"
                android:padding="8dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/color3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/color2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_note_color3"/>

            <ImageView
                android:id="@+id/theme_purple"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_purple"
                android:padding="8dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/color4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/color3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_note_color4"/>

            <ImageView
                android:id="@+id/theme_blue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_blue"
                android:tint="@android:color/white"
                android:padding="8dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/color5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/color4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_note_color5"/>

            <ImageView
                android:id="@+id/theme_cyan"
                android:layout_width="40dp"
                android:background="@drawable/circle_cyan"
                android:layout_height="40dp"
                android:tint="@android:color/white"
                android:padding="8dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/color6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/color5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_note_color6"/>

            <ImageView
                android:id="@+id/theme_teal"
                android:background="@drawable/circle_teal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                app:tint="@android:color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/color7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/color6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_note_color7"/>

            <ImageView
                android:id="@+id/theme_green"
                android:background="@drawable/circle_green"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@android:color/white"
                android:padding="8dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/color8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/color6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_amber"/>

            <ImageView
                android:id="@+id/theme_amber"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_amber"
                android:padding="8dp"
                android:tint="@android:color/white" />
        </FrameLayout>



        <FrameLayout
            android:id="@+id/color9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/color8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/view_color9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_orange"/>

            <ImageView
                android:id="@+id/theme_orange"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_orange"
                android:padding="8dp"/>
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

</LinearLayout>